<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/AngularApp/Vendor/angular.min.js"></script>
    <script src="~/Scripts/AngularApp/Vendor/angular-route.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <link href="~/Content/jquery-ui-themes-1.10.2/jquery-ui-themes-1.10.2/themes/blitzer/jquery-ui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.10.2.js"></script>
    <script src="~/Scripts/AngularApp/Directives/dirPagination.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <link href="~/Content/Common.css" rel="stylesheet" />
    <script src="~/Scripts/AngularApp/App/productApp.js"></script>
    <script src="~/Scripts/AngularApp/Controllers/productPopupController.js"></script>
    <script src="~/Scripts/AngularApp/Controllers/productInlineController.js"></script>
    <script src="~/Scripts/AngularApp/Controllers/userController.js"></script>
    <script src="~/Scripts/AngularApp/Services/productService.js"></script>
    <script src="~/Scripts/AngularApp/Directives/dirAutoComplete.js"></script>
    <script src="~/Scripts/AngularApp/Services/userService.js"></script>
    <script src="~/Scripts/AngularApp/Directives/dirOutsideClick.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @*<div class="k-loading-image" id="loadingImg" style="margin: 4% 0%; position: relative;">
    </div>*@
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <span class = "navbar-brand text-primary">Product Management</span>
            </div>
            <div class="navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="navbar-link" ng-click="active='InlineEdit'">@Html.ActionLink("Inline Edit", "ProductInline", "Product")</li>
                    <li class="navbar-link" ng-click="active='PopupEdit'">@Html.ActionLink("Popup Edit", "Product", "Product")</li>
                    <li class="navbar-link" ng-click="active='UserLi'">@Html.ActionLink("User Registration", "UserList","User")</li>
                </ul>
                <h4 class="navbar-right text-primary" id="currentUser"></h4>
            </div>
          
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Product Management</p>
        </footer>
    </div>
 @*   @RenderBody()*@
    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<script type="text/javascript">
        $(document).ready(function () {
            $('.dropdown-toggle').dropdown();
        });
        $('ul.dropdown-menu').on('click', function (event) {
            event.stopPropagation();
        });
</script> 
